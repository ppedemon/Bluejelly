#! /bin/bash

BASE=`dirname ${0}`

SEEN_MP=0
MP=
ARGS=

for a in $*; do
  case $a in
  "-mp") 
     SEEN_MP=1
     ;;
  *)
     if [ $SEEN_MP -eq 1 ]; then
       SEEN_MP=0
       MP=${MP}:$a
     else
       ARGS=$ARGS" "$a
     fi
  esac           
done

CP=
for jar in `ls ${BASE}/lib/*.jar`; do
  CP+=":"$jar
done
CP=${CP:1}${MP}

java -Dapp.version=${build.version} -cp ${CP} bluejelly.runtime.Runtime ${ARGS}
exit $?
